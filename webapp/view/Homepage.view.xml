<mvc:View
		controllerName="project1.controller.Homepage"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns="sap.m"
		xmlns:f="sap.f"
        xmlns:fb="sap.ui.comp.filterbar"
        xmlns:core="sap.ui.core"
		xmlns:layout="sap.ui.layout"
		height="100%">
		<f:DynamicPage id="dynamicPageId" showFooter="false" headerExpanded="{/headerExpanded}" toggleHeaderOnTitleClick="{/titleClickable}">
			<!-- DynamicPage Title -->
			<f:title>
				<f:DynamicPageTitle>
					<f:heading>
						<Title text="{i18n>products}"/>
					</f:heading>
					<f:breadcrumbs>
						<Breadcrumbs>
							<Link text="Home" />
						</Breadcrumbs>
					</f:breadcrumbs>
					<f:expandedContent>
						<Label text="{i18n>subheading}"/>
					</f:expandedContent>
					<f:snappedContent>
						<Label text="{i18n>subheading}"/>
					</f:snappedContent>
					<f:snappedTitleOnMobile>
						<Title text="{i18n>subheading}"/>
					</f:snappedTitleOnMobile>
					<f:content>
						<OverflowToolbar>
							<GenericTag text="INFO"
								status="Information"
								press="onPressOpenPopover"
								design="Full">
							</GenericTag>
						</OverflowToolbar>
					</f:content>
					<f:actions>
						<Button
								text="{i18n>toggleFooter}"
								type="Transparent"
								press="onToggleFooter"/>
					</f:actions>
					<f:navigationActions>
					</f:navigationActions>
				</f:DynamicPageTitle>
			</f:title>
			<!-- DynamicPage Header -->
			<f:header>
				<f:DynamicPageHeader pinnable="true">
					<f:content>
                        <fb:FilterBar id="filterbar" persistencyKey="myPersKey" useToolbar="false" search=".onSearch" filterChange=".onFilterChange" showClearOnFB="true">
							<fb:filterGroupItems>
								<fb:FilterGroupItem name="Product Name" label="{i18n>productName}" groupName="Group1" visibleInFilterBar="true">
									<fb:control>
										<MultiInput
                                            id="idFBProductName"
                                            change="onSearch"
                                            placeholder="{i18n>enterProductName}">
	                                	</MultiInput>
									</fb:control>
								</fb:FilterGroupItem>
								<fb:FilterGroupItem name="Supplier ID" label="{i18n>supplierID}" groupName="Group1" visibleInFilterBar="true">
									<fb:control>
										<MultiComboBox
                                            id="idFBSupplierID"
                                            placeholder="{i18n>enterSupplierID}"
                                            selectionChange="handleSelectionChange"
                                            selectionFinish="handleSelectionFinish"
                                            showSelectAll="true"
                                            items="{
                                                path: 'oOrdersModel>/Products'
                                            }">
                                            <core:Item key="{oOrdersModel>SupplierID}" text="{oOrdersModel>SupplierID}"/>
                                        </MultiComboBox>
									</fb:control>
								</fb:FilterGroupItem>
							</fb:filterGroupItems>
						</fb:FilterBar>
                    </f:content>
				</f:DynamicPageHeader>
			</f:header>
			<f:content>
				<Table id="idOrdersTable"
						sticky="HeaderToolbar,ColumnHeaders"
						inset="false"
						items="{
                            path: 'oOrdersModel>/Products'
                        }"
                        mode="SingleSelectLeft"
					    class="sapFDynamicPageAlignContent"
					    width="auto">
					<headerToolbar>
						<OverflowToolbar>
                            <content>
                                <Title text="{i18n>productsTableTitle}" level="H2" />
                                <ToolbarSpacer />
                                <Button icon="sap-icon://add" tooltip="{i18n>addNewProduct}" press="onPressAddOrder" />
                                <Button icon="sap-icon://edit" tooltip="{i18n>editProduct}" press="onPressEditOrder" />
                                <Button icon="sap-icon://delete" tooltip="{i18n>deleteProduct}" press="onPressDeleteOrder" />
                            </content>
						</OverflowToolbar>
					</headerToolbar>
					<columns>
                        <Column>
							<Text text="{i18n>product}" />
						</Column>
						<Column minScreenWidth="Desktop" demandPopin="true">
							<Text text="{i18n>quantityPerUnit}" />
						</Column>
                        <Column minScreenWidth="Desktop" demandPopin="true">
							<Text text="{i18n>unitPrice}" />
						</Column>
						<Column minScreenWidth="Desktop" demandPopin="true">
							<Text text="{i18n>unitsInStock}" />
						</Column>
						<Column minScreenWidth="Desktop" demandPopin="true">
							<Text text="{i18n>unitsOnOrder}" />
						</Column>
						<Column minScreenWidth="Desktop" demandPopin="true">
							<Text text="{i18n>supplierID}" />
						</Column>
					</columns>
					<items>
						<ColumnListItem type="Navigation" press="handleItemPress">
							<cells>
								<ObjectIdentifier title="{oOrdersModel>ProductID}" text="{oOrdersModel>ProductName}" />
                                <Text text="{oOrdersModel>QuantityPerUnit}" />
								<Text text="{oOrdersModel>UnitPrice}" /> 
								<Text text="{oOrdersModel>UnitsInStock}" /> 
                                <Text text="{oOrdersModel>UnitsOnOrder}" /> 
								<Text text="{oOrdersModel>SupplierID}" />
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</f:content>
			<!-- DynamicPage Footer -->
			<f:footer>
				<OverflowToolbar>
                    <FlexBox
                        alignItems="Center"
                        justifyContent="End">
                        <Button type="Accept" text="Accept" class="sapUiSmallMarginEnd" />
					    <Button type="Reject" text="Reject" />
			        </FlexBox>	
				</OverflowToolbar>
			</f:footer>
		</f:DynamicPage>
</mvc:View>