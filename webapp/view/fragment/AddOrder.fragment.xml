<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form">
	<Dialog title="{i18n>addNewProduct}" busyIndicatorDelay="0" verticalScrolling="true" horizontalScrolling="false" contentWidth="45%">
		<content>
            <f:SimpleForm id="SimpleFormChange354"
			editable="true"
			layout="ResponsiveGridLayout"
			title="Form"
			labelSpanXL="3"
			labelSpanL="3"
			labelSpanM="3"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="4"
			emptySpanL="4"
			emptySpanM="4"
			emptySpanS="0"
			columnsXL="1"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false" >
			<f:content>
				<Label text="{i18n>productName}" />
				<Input value="{oAddOrderModel>/ProductName}" />
				<Label text="{i18n>quantityPerUnit}" />
				<Input value="{oAddOrderModel>/QuantityPerUnit}" type="Number" />
				<Label text="{i18n>unitPrice}" />
				<Input value="{oAddOrderModel>/UnitPrice}" />
				<Label text="{i18n>unitsInStock}" />
				<Input value="{oAddOrderModel>/UnitsInStock}" type="Number" />
				<Label text="{i18n>unitsOnOrder}" />
				<Input value="{oAddOrderModel>/UnitsOnOrder}" type="Number" />
				<Label text="{i18n>supplierID}" />
				<Input value="{oAddOrderModel>/SupplierID}" />
			</f:content>
		</f:SimpleForm>
		</content>
        <beginButton>
            <Button text="{i18n>save}" type="Accept" press="handleSavePress" />
        </beginButton>
		<endButton>
			<Button text="{i18n>cancel}" type="Reject" press="handleCancelPress" />
		</endButton>
	</Dialog>
</core:FragmentDefinition>